<% title "List Users in the #{current_user.tenant.name} Organization" %>

<%= link_to "Invite User", new_org_user_path %>

<%= form_tag(users_path, :method => :get, :name => 'search') do -%>
    <strong>Show Users:</strong> <%= radio_button_tag "show_users", "ALL", cookies[:users_search_show_users] == 'ALL',
                   html_options = {:onchange => 'document.search.submit();'} %>All&nbsp;&nbsp;
    <%= radio_button_tag "show_users", "CONFIRMED", cookies[:users_search_show_users] == 'CONFIRMED',
                   html_options = {:onchange => 'document.search.submit();'} %>Confirmed Users Only&nbsp;&nbsp;
    <%= radio_button_tag "show_users", "UNCONFIRMED", cookies[:users_search_show_users] == 'UNCONFIRMED',
                   html_options = {:onchange => 'document.search.submit();'} %>Unconfirmed UsersOnly
<% end %>

<%= paginate @users %>

<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Member Since</th>
    <th>Last Logged On At</th>
    <th>Confirmed</th>
    <th>Action</th>
  </tr>

  <%= render @users %>
</table>
