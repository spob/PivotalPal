<% title "Sign up" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <p><%= f.label :email %><br />
      <%= f.text_field :email %></p>

    <p><%= f.label :password %><br />
      <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></p>

    <p><%= f.label :first_name %><br />
      <%= f.text_field :first_name, :size => 25 %></p>

    <p><%= f.label :last_name %><br />
      <%= f.text_field :last_name, :size => 25 %></p>

    <p><%= f.label :company_name %><br />
      <%= f.text_field :company_name, :size => 50 %></p>

    <p><%= f.label :api_key, t('tenant.api_key') %><br />
      <%= f.text_field :api_key, :size => 32 %></p>

    <%= @captcha_html.try(:html_safe) %>
    <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
