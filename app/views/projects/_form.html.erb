<h1><%= yield(:title) %></h1>
<!-- </div> -->

<!-- <div class="grid_16"> -->
<div class="box">
  <div class="content pad-16">

    <%= form_for(@project) do |f| %>
        <% if @project.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
              <ul>
                <% @project.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= f.hidden_field :name %>


        <fieldset>

          <div class="grid_8">
            <div class="clearfix">
              <%= f.label :pivotal_identifier, t('project.pivotal_identifier') %>
              <div class="input">
                <%= f.text_field :pivotal_identifier %>
              </div>
            </div>
            <!-- /clearfix -->

            <div class="clearfix">
              <%= f.label :time_zone %>
              <div class="input">
                <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {}, {:class => 'xlarge'} %>
              </div>
            </div>

            <div class="clearfix">
              <%= f.label :feature_prefix %>
              <div class="input">
                <%= f.text_field :feature_prefix, :size => 5 %>
              </div>
            </div>


            <div class="clearfix">
              <%= f.label :bug_prefix %>
              <div class="input">
                <%= f.text_field :bug_prefix, :size => 5 %>
              </div>
            </div>


            <div class="clearfix">
              <%= f.label :chore_prefix %>
              <div class="input">
                <%= f.text_field :chore_prefix, :size => 5 %>
              </div>
            </div>

            <div class="clearfix">
              <%= f.label :release_prefix %>
              <div class="input">
                <%= f.text_field :release_prefix, :size => 5 %>
              </div>
            </div>
          </div>
          <!-- end .grid_8 -->

          <div class="grid_8">
            <h6>Renumbering options</h6>

            <div class="pad-8">
              <ul class="inputs-list">
                <li>
                  <%= f.label :renumber_features %>:
                  <br />
                  <%= f.radio_button :renumber_features, Constants::RENUMBER_NO  %>
                  No&nbsp;&nbsp;
                  <%= f.radio_button :renumber_features, Constants::RENUMBER_BY_PIVOTALPAL  %>
                  Assigned by Pivotal Pal&nbsp;&nbsp;
                  <%= f.radio_button :renumber_features, Constants::RENUMBER_BY_JIRA  %>
                  Assigned by Jira
                </li>

                <li>
                  <%= f.label :renumber_bugs %>:
                  <br />
                  <%= f.radio_button :renumber_bugs, Constants::RENUMBER_NO  %>
                  No&nbsp;&nbsp;
                  <%= f.radio_button :renumber_bugs, Constants::RENUMBER_BY_PIVOTALPAL  %>
                  Assigned by Pivotal Pal&nbsp;&nbsp;
                  <%= f.radio_button :renumber_bugs, Constants::RENUMBER_BY_JIRA  %>
                  Assigned by Jira
                </li>
                <li>
                  <%= f.label :renumber_chores %>:
                  <br />
                  <%= f.radio_button :renumber_chores, Constants::RENUMBER_NO  %>
                  No&nbsp;&nbsp;
                  <%= f.radio_button :renumber_chores, Constants::RENUMBER_BY_PIVOTALPAL  %>
                  Assigned by Pivotal Pal&nbsp;&nbsp;
                  <%= f.radio_button :renumber_chores, Constants::RENUMBER_BY_JIRA  %>
                  Assigned by Jira
                </li>

                <li>
                  <%= f.label :renumber_releases %>:
                  <br />
                  <%= f.radio_button :renumber_releases, Constants::RENUMBER_NO  %>
                  No&nbsp;&nbsp;
                  <%= f.radio_button :renumber_releases, Constants::RENUMBER_BY_PIVOTALPAL  %>
                  Assigned by Pivotal Pal&nbsp;&nbsp;
                  <%= f.radio_button :renumber_releases, Constants::RENUMBER_BY_JIRA  %>
                  Assigned by Jira
                </li>
              </ul>
            </div>
          </div>
          <!-- end .grid_8 -->

          <div class="actions grid_16 ">
            <%= f.submit %>
            <span class="pad-8">
              <%= link_to 'Back', projects_path %>
						</span>
          </div>
          <!-- end .grid_16 -->
        </fieldset>

    <% end %>
  </div>
  <!-- end .content -->
</div> <!-- end .box -->
