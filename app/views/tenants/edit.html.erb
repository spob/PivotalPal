<% title "Change your company information" %>

<%= form_for(@tenant, :url => tenant_path(@tenant), :method => :put) do |f| %>
    <% if @tenant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tenant.errors.count, "error") %> prohibited your company information from being saved:</h2>

          <ul>
            <% @tenant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name, :size => 50 %>
    </div>
    <div class="field">
      <%= f.label :api_key, t('tenant.api_key') %>
        <br/>
        <%= f.text_field :api_key, :size => 32 %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
